
@{
    Layout = null;

}
<!DOCTYPE html>

<html>
<head>
    <title>Проверка торговой точки</title>
    <link href="@Url.Content("~/Content/SiteCSS.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="header">
        <div class="overlay"></div>
        <div class="website_name">
            <a href="@Url.Action("Index", "Home")">АнтиКонтрафакт</a>
        </div>
        <div class="menu">
            <div class="emptyblock"><p align="center">Проверить товар по штрихкоду</p></div>
            <div class="emptyblock"><p align="center">Подать заявление о контрафакте</p></div>
            <div class="block"><p align="center">Проверить торговую точку по ИНН</p></div>
            <div class="emptyblock"><p align="center">Поиск торговой точки</p></div>
        </div>
        <div class="QMark"><a href="@Url.Action("Info", "Home")"><img src="@Url.Content("~/Images/Home_qmark.png")" width="49" height="51" /></a></div>
    </div>
    <div class="content3">
        <div class="checksellertitle"><p align="center">Проверка торговой точки по ИНН</p></div>
        @using (Html.BeginForm())
        {
        <input class="INNtext" type="text" name="INNcode" placeholder="Введите ИНН торговой точки"/>

<input class="subbutton" type="submit" value="Проверить"/>
        }
        <div class="orginfo">
            <p align="center">@{try { @ViewBag.Name;} catch { } }</p>
            <p align="center">@{try { @ViewBag.Address;} catch { } }</p>
        </div>
    </div>
    <div class="footer">
        <div class="author_label">
            <div class="authors">Дорышин М.О., Малкова С.А., Лебедева А.И.</div>
        </div>
    </div>
</body>
</html>
